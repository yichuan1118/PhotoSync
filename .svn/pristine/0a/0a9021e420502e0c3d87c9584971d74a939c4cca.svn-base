<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/photo_row_divider"
    android:background="@color/album_divider_background_color" >

    <TextView
        android:id="@id/date"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/album_date_height"
        android:layout_gravity="left"
        android:gravity="bottom"
        android:paddingBottom="@dimen/album_date_bottom_padding"
        android:paddingLeft="@dimen/album_date_left_padding"
        android:textColor="@color/album_date_color"
        android:textSize="@dimen/album_date_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@id/count"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/album_photo_count_height"
        android:layout_gravity="right"
        android:gravity="bottom"
        android:paddingBottom="@dimen/album_photo_count_bottom_padding"
        android:paddingRight="@dimen/album_photo_count_right_padding"
        android:textColor="@color/album_photo_count_color"
        android:textSize="@dimen/album_photo_count_text_size" />

    <ImageView
        android:id="@id/divider"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/album_divider_line_height"
        android:layout_gravity="bottom|right|center"
        android:src="@color/album_divider_line_color" />

</FrameLayout>